<h1>
  <%= t('.list_invoices') %>
  <span class="right">
    <%= link_to t('.new_invoice'), new_invoice_path %>
  </span>
</h1>

<table>
  <thead>
    <tr>
      <th><%= t('.id') %></th>
      <th><%= t('.client') %></th>
      <th><%= t('.status') %></th>
      <th><%= t('.amount') %></th>
      <th><%= t('.date_created') %></th>
      <th><%= t('.actions') %></th>
    </tr>
  </thead>
  
  <tfoot>
    <tr>
      <td colspan="6">
        <%= will_paginate @invoices %>
      </td>
    </tr>
  </tfoot>
  
  <tbody>
  <% @invoices.each do |invoice| %>
    <tr>
      <td class="align-right"><%= invoice.id %></td>
      <td><%= link_to invoice.client.name, client_path(invoice.client) %> (<%= mail_to invoice.client.email, 'Email' %>)</td>
      <td class="invoice-status invoice-status-<%= invoice.status %>">
        <%= t('.' + invoice.status) %>
      </td>
      <td class="align-right"><%= number_to_currency invoice.total %></td>
      <td><%= l(invoice.created_at, :format => :short) %>
      <td>
        <%= link_to t('.show'), invoice %>
        <%= link_to t('.pdf'), invoice_path(invoice, :format => :pdf) %>
        <%= link_to t('.edit'), edit_invoice_path(invoice) %>
        <%= link_to t('.destroy'), invoice, :confirm => t('.confirm_delete'), :method => :delete %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>