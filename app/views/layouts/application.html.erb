<!DOCTYPE html>
<html>
<head>
  <title>Invoices</title>
  <%= stylesheet_link_tag ['960', 'template', 'colour', 'messages'] %><!-- :all -->
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  
  <script type="text/javascript" charset="utf-8">
    $(function(){
      $('#messages').slideDown();
    });
  </script>
</head>
<body>
  <h1 id="head"> Invoices </h1>

  <ul id="navigation">
    <li><span class="active">Dashboard</span></li>
    <li><a href="#">Invoices (1)</a></li>
    <li><a href="#">Clients</a></li>
    
    <% if signed_in? %>
      <li class="right"> <%= link_to t('.logout'), logout_path, :method => :delete %> </li>
    <% else %>
      <li class="right"> <%= link_to t('.login'), show_login_path %> </li>
    <% end %>
    <li class="right"><a href="#">Settings</a></li>
  </ul>
  
  <% if flash[:alert] || flash[:notice] %>
  <div id="messages" class="container_16 clearfix" style="display:none;">
    <% if flash[:alert] %>
    <p class="alert"> <%= flash[:alert] %>
    <% elsif flash[:notice] %>
    <p class="notice"> <%= flash[:notice] %>
    <% end %>
  </div>
  <% end %>
  
  <div id="content" class="container_16 clearfix">
    <%= yield %>
  </div>
  
  <div id="foot">
    Open Source Invoicing Powered by <strong>Invoices</strong>
  </div>

</body>
</html>
